<style>
  .hero-modern-gradient {
    padding: 4rem 2rem; /* Reduced padding */
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 2rem !important; /* Reduced margin */
    border-radius: 0.75rem; /* Slightly smaller border-radius */
    max-width: 1080px;
    margin: 0 auto; /* Light background color */
  }

  .hero-content-modern {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: center; /* Vertically align text and image */
  }

  .hero-text {
    text-align: left;
  }

  .greeting-modern {
    font-size: 1.5rem;
    color: #8ab4f8;
    margin-bottom: 0.5rem; /* Reduced margin */
  }

  .name-modern {
    font-size: 3rem; /* Larger font size */
    font-weight: bold;
    margin-bottom: 1rem; /* Adjusted margin */
    color: #333;
    line-height: 1.1; /* Adjust line height */
    margin-top: 0;
  }

  .about-me-modern {
    line-height: 1.6;
    color: #555;
    margin-bottom: 2rem; /* Adjusted margin */
  }

  .hero-buttons-modern {
    display: flex;
    gap: 1rem;
  }

  .view-work-button-modern,
  .contact-button-modern {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem; /* Smaller border-radius */
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .view-work-button-modern {
    background-color: #8ab4f8; /* Purple primary color */
    color: white;
  }

  .contact-button-modern {
    background-color: transparent;
    color: #8ab4f8; /* Purple primary color */
    border: 2px solid #8ab4f8; /* Purple primary color */
  }

  .view-work-button-modern:hover {
    background-color: #5c97f5;
  }

  .contact-button-modern:hover {
    background-color: #f0f0f0;
  }

  .hero-image-container-modern {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .profile-image-modern {
    width: 400px; /* Smaller image */
    height: 400px;
  }

  .social-media-icons-modern {
    display: flex;
    gap: 2rem;
    margin-top: 1rem; /* Adjusted margin */
  }
  .social-media-icons-modern a {
    text-decoration: none;
    color: #6b6b6b; /* Gray color for icons */
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-content-modern {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-image-container-modern {
        order: 0;
        margin-bottom: 1.5rem;
        margin-top: 1rem;
    }

    .profile-image-modern {
      width: 250px;
      height: 250px;
    }

    .hero-buttons-modern {
      justify-content: center;
    }

    .view-work-button-modern {
      padding: 0.5rem 0.75rem; /* Smaller padding on mobile */
      line-height: 2.2; /* Adjust line height */
    }

    .social-media-icons-modern {
      justify-content: center;
      margin-top: 1rem; /* Adjusted margin */
    }

    .hero-modern-gradient {
      padding: 0rem 2rem;
      margin-top: 0rem!important;
    }
  }
</style>
