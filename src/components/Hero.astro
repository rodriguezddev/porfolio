---
import profileImage from "../assets/profile.png"; // Reemplaza con la ruta real de tu imagen

const translations: Record<
  "en" | "es",
  { greeting: string; aboutMe: string; viewWork: string; contactMe: string }
> = {
  en: {
    greeting: "Hello, I'm a",
    aboutMe:
      "I craft responsive websites where technologies meet creativity to create exceptional user experiences that make an impact.",
    viewWork: "View my work →",
    contactMe: "Contact me",
  },
  es: {
    greeting: "Hola, soy",
    aboutMe:
      "Elaboro sitios web responsivos donde las tecnologías se unen a la creatividad para crear experiencias de usuario excepcionales que causan impacto.",
    viewWork: "Ver mi trabajo →",
    contactMe: "Contáctame",
  },
};

// Obtener el idioma inicial de la cookie o usar inglés por defecto (para la carga inicial)
let currentLanguageServer: "en" | "es" =
  (Astro.cookies.get("language")?.value as "en" | "es") || "es";
let currentTranslationServer = translations[currentLanguageServer];
